%nav.navbar{role: :navigation}
  .container-fluid
    .navbar-header
      %button.navbar-toggle{type: :button, 'data-toggle' => :collapse, 'data-target' => '#navbar-collapse'}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar

      %a.navbar-brand{href: '/'} Mentoring NYC

    .collapse.navbar-collapse#navbar-collapse
      %ul.nav.navbar-nav.navbar-right
        - if authenticated?
          %li.dropdown
            %a.dropdown-toggle{'data-toggle' => :dropdown}<
              = current_user.name
              %span.caret
            %ul.dropdown-menu{role: :menu}
              %li
                %a{href: '/profile'}<
                  %span.fa.fa-user
                  Profile
              %li
                %a{href: '/challenges'}<
                  %span.fa.fa-trophy
                  Challenges
              %li.divider
              %li
                %a{href: '/signout'}<
                  %span.fa.fa-sign-out
                    Signout
        - else
          %li
            %a{href: "/auth/github?redirect_uri=#{request.path}"}<
              %span.fa.fa-sign-in
              Signin
